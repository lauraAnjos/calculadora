    private void txfNumero2ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void btnSomarActionPerformed(java.awt.event.ActionEvent evt) {                                         

        int numero1 = Integer.parseInt(txfNumero1.getText());
        int numero2 = Integer.parseInt(txfNumero2.getText());

        int somar = numero1 + numero2;

        txfResultado.setText(String.valueOf(somar));

        txfNumero1.setText("");
        txfNumero2.setText("");

    }                                        

    private void txfResultadoActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
    }                                            

    private void btnSubtracacaoActionPerformed(java.awt.event.ActionEvent evt) {                                               
        int numero1 = Integer.parseInt(txfNumero1.getText());
        int numero2 = Integer.parseInt(txfNumero2.getText());

        int subtrair = numero1 - numero2;

        txfResultado.setText(String.valueOf(subtrair));

        txfNumero1.setText("");
        txfNumero2.setText("");

    }                                              

    private void btnMultiplicaçaoActionPerformed(java.awt.event.ActionEvent evt) {                                                 

        int numero1 = Integer.parseInt(txfNumero1.getText());
        int numero2 = Integer.parseInt(txfNumero2.getText());

        int multiplicar = numero1 * numero2;
        txfResultado.setText(String.valueOf(multiplicar));

        txfNumero1.setText("");
        txfNumero2.setText("");

    }                                                

    private void btnDivisaoActionPerformed(java.awt.event.ActionEvent evt) {                                           
        int numero1 = Integer.parseInt(txfNumero1.getText());
        int numero2 = Integer.parseInt(txfNumero2.getText());

        int divisao = numero1 / numero2;
        txfResultado.setText(String.valueOf(divisao));

        txfNumero1.setText("");
        txfNumero2.setText("");

    }                                          

